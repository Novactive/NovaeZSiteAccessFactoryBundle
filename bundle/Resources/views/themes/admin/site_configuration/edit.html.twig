{% extends '@ezdesign/layout/pagelayout.html.twig' %}

{% form_theme form with ['@EzPlatformAdminUi/form_fields.html.twig', _self ] %}

{% block content %}
    {{ form_start(form, {attr: {class:'col-11', novaezsiteaccessfactory:'mainform'}}) }}
    {{ form_row(form.name) }}

    {% if form.siteaccessName is defined %}
        {{ form_row(form.siteaccessName) }}
    {% endif %}
    <table>
        <tr>
            <td>{{ form_row(form.type) }}</td>
        </tr>
        <tr>
            <td>{{ form_row(form.theme) }}</td>
        </tr>
    </table>

    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

{% block rightbar %}
    {{ knp_menu_render('novaezsiteaccessfactory.menu.admin.save_cancel', {'template': '@EzPlatformAdminUi/parts/menu/sidebar_right.html.twig'}) }}
{% endblock %}
